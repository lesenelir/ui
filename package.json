{
  "name": "ui",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check-types": "turbo run check-types",
    "biome:check": "turbo run biome:check",
    "biome:fix": "turbo run biome:fix",
    "biome:web:check": "pnpm --filter web biome:check",
    "biome:web:fix": "pnpm --filter web biome:fix",
    "biome:ui:check": "pnpm --filter @repo/ui biome:check",
    "biome:ui:fix": "pnpm --filter @repo/ui biome:fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "pnpm exec biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
