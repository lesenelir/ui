{
  "name": "lesenelir",
  "private": true,
  "author": "lesenelir <hi@lesenelir.me>",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clear": "pnpm -r exec rm -rf node_modules dist .turbo .next && rm -rf node_modules dist .next .turbo",
    "check-types": "turbo run check-types",
    "biome:check": "turbo run biome:check",
    "biome:fix": "turbo run biome:fix",
    "biome:web:check": "pnpm --filter web biome:check",
    "biome:web:fix": "pnpm --filter web biome:fix",
    "biome:ui:check": "pnpm --filter @lesenelir/ui biome:check",
    "biome:ui:fix": "pnpm --filter @lesenelir/ui biome:fix",
    "prepare": "husky"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@egoist/tailwindcss-icons": "^1.9.0",
    "@tailwindcss/postcss": "^4.1.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "**/*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc,css}": [
      "pnpm exec biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
